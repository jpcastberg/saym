{
    "compilerOptions": {
        "alwaysStrict": true,
        "composite": true,
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ESNext"
    },
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "./client/env.d.ts",
        "./shared/**/*",
        "./client/src/**/*",
        "./client/src/**/*.vue",
        "./client/vite.config.ts"
    ]
}
