{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    }
}
